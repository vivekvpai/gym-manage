<!DOCTYPE html>
<html lang="en">
  <head>
    <title>PF</title>
    <!-- <link rel="icon" href="/img/DBITAA logo.png" type="image/x-icon" /> -->

    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/styles/show.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/751afc7438.js"
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/show .css" />

    <style>
      .inactive-cell {
        background-color: rgb(255, 0, 0);
        color: white; /* Optional: Change text color for better contrast */
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg nav-color ">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="nav nav-item">
          <li class="nav-item">
            <a class="nav-link active" href="/add">Add new Record</a>
          </li>
     
          <li class="nav-item">
            <a class="nav-link" href="/show">Show</a>
          </li>
        </ul>
      </div>
      <ul class="navbar-nav">
        <li class="nav-item">
          <!-- <a class="nav-link active" href="/logout">Logout</a> -->
          <form action="/logout" method="POST">
            <a class="nav-link"
              ><button class="btn btn-outline-danger">
                <i class="fa fa-lock"></i> Logout
              </button></a
            >
          </form>
        </li>
      </ul>
    </nav>

    <div class="container-fluid">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-12">
            <h2>
              Total Members: <%= use %>
              <button
                onclick="exportTableToCSV('Alumini '+ newdate + '.csv')"
                class="btn btn-primary float-right"
              >
                <i class="fas fa-download"></i> Export CSV
              </button>
            </h2>
          </div>

          <div class="col-lg-6 col-sm-auto">
            <form action="/show" method="GET" class="form-group mt-3">
              <div class="form-group">
                <div class="input-group row">
                  <div class="input-group-prepend">
                    <label class="input-group-text">Search</label>
                  </div>
                  <input
                    type="text"
                    name="search"
                    placeholder="By Name"
                    class="form-control"
                  />
                  <button
                    type="submit"
                    class="btn btn-outline-dark"
                    value="Search"
                  >
                    <i class="fas fa-search"></i> Default
                  </button>
                </div>
              </div>
            </form>
          </div>

          <div class="col-lg-6 col-sm-auto">
            <form action="/show" method="GET" class="form-group mt-3">
              <div class="input-group row">
                <div class="input-group-prepend">
                  <label class="input-group-text" for="branch"
                    >Subscription</label
                  >
                </div>
                <select id="branch" name="search" class="form-control">
                  <option disabled value="">Select One</option>
                  <option value="1">1 Months</option>
                  <option value="3">3 Months</option>
                  <option value="6">6 Months</option>
                  <option value="12">12 Months</option>
                </select>
                <button
                  type="submit"
                  class="btn btn-outline-dark"
                  value="Search"
                >
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </form>
          </div>

          <div class="col-lg-12 mt-3">
            <div class="scrol">
              <table class="table table-bordered table-hover">
                <thead class="bg-info text-white">
                  <tr>
                    <th scope="col">id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Subscription</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <% for (let user of users){%>
                <tr>
                  <td><%= count++ %></td>
                  <td><%= user.name %></td>
                  <td><%= user.phone %></td>
                  <td><%= user.subscription %></td>
                  <td><%= user.doj %> - <%= user.eos %></td>
                  <td id="status" class="status-cell"><%= user.status %></td>
                  <td>
                    <!-- <button class="btn btn-danger">Delete</button> -->

                    <form
                      class="d-inline-flex"
                      method="post"
                      action="/delete/<%= user._id %>"
                    >
                      <button class="btn btn-danger">Delete</button>
                    </form>

                    <a href="/update/<%= user._id %>" class="btn btn-info"
                      >Update</a
                    >
                  </td>
                </tr>
                <% }%>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <script src="/js/export.js"></script>
    <script>
      var d = new Date();
      var date = d.getDate();
      var year = d.getFullYear();
      var month = d.getMonth() + 1;

      newdate = date + "-" + month + "-" + year;

      const statusCells = document.querySelectorAll(".status-cell");

      statusCells.forEach((cell) => {
        if (cell.textContent.trim() === "END") {
          cell.classList.add("inactive-cell");
        }
      });
    </script>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
